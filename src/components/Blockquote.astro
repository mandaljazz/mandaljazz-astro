---
export interface Props {
  author: string;
}

const { author } = Astro.props;
---

<figure
  class="mx-auto max-w-3xl space-y-8 rounded-lg bg-pink/10 p-8 text-xl leading-8"
>
  <blockquote class="space-y-6">
    <span
      class="float-left h-28 w-40 font-display text-[20rem]"
      style="line-height: 1;">”</span
    ><slot />
  </blockquote>
  <figcaption class="text-right text-2xl">– {author}</figcaption>
</figure>
