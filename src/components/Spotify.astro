---
export interface Props {
  src: string;
  iframeClass?: string;
}

const { src, iframeClass } = Astro.props;
---

<div class="w-full max-w-lg mx-auto lg:h-full">
  <iframe
    class={`rounded-lg h-[500px] ${iframeClass}`}
    src={`${src?.replace(
      "https://open.spotify.com/",
      "https://open.spotify.com/embed/"
    )}?utm_source=generator`}
    width="100%"
    height="500"
    allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
    loading="lazy"></iframe>
</div>
