---
import classNames from "classnames";

export interface Props {
  src: string;
  alt?: string;
  className?: string;
}

const { src, alt, className } = Astro.props;
---

<div class={classNames("relative overflow-clip flex h-full", className)}>
  <div
    class={classNames(
      "absolute -z-10 bg-no-repeat bg-cover bg-center w-full h-full rounded",
    )}
    style={`background-image: url('${src}');`}
  >
    <div class="h-full w-full rounded backdrop-blur-md"></div>
  </div>
  <img
    src={`${src}`}
    alt={alt}
    class="m-auto max-h-full w-auto rounded shadow-2xl"
  />
</div>
