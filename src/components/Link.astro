---
import { Icon } from "astro-icon";
export interface Props {
  href: string;
  title: string;
  external?: boolean;
  openInNewTab?: boolean;
  class?: string;
  unstyled?: boolean;
  hideInitialUnderline?: boolean;
}

const {
  href,
  external,
  openInNewTab,
  class: extraClasses,
  unstyled,
  hideInitialUnderline,
} = Astro.props;

const classes = [
  "inline",
  unstyled ? undefined : "link",
  hideInitialUnderline ? "hide-initial-underline" : undefined,
  extraClasses,
];
---

{
  openInNewTab || external ? (
    <a href={href} class:list={classes} rel="noopener nofollow" target="_blank">
      {external ? (
        <>
          <slot />{" "}
          <Icon class="icon mb-1 inline" pack="ion" name="ios-link" size={24} />
        </>
      ) : (
        <slot />
      )}
    </a>
  ) : (
    <a
      href={href}
      class:list={classes}
      aria-current={Astro.url.pathname === href ? "page" : undefined}
    >
      <slot />
    </a>
  )
}
