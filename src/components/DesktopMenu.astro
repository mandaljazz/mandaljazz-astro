---
import Link from "./Link.astro";

export interface Props {
  class?: string;
  navItems: {
    href: string;
    title: string;
  }[];
}

const { class: extraClasses, navItems } = Astro.props;
---

<header class={`relative ${extraClasses}`}>
  <div
    class="absolute w-64 h-64 top-0 -left-32 sm:left-20 md:left-32 lg:left-40 -translate-y-1/2 bg-pink rounded-full"
  >
  </div>
  <nav class="p-4 flex gap-10 sticky top-0 bg-pink text-white z-10">
    <a href="/" class="ml-2 animate-pause hover:animate-spin"
      ><img src="/jazzlaug-white.png" class="w-12 h-auto" /></a
    >
    <div class="w-full flex flex-row gap-4 sm:gap-8 items-center">
      {
        navItems.map(({ href, title }) => (
          <Link nav href={href} title={title}>
            {title}
          </Link>
        ))
      }
    </div>
  </nav>
</header>
