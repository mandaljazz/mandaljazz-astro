---
import { Icon } from "astro-icon";

export interface Props {
  className?: string;
  size?: number;
}

const { className, size } = Astro.props;
---

<div
  class:list={[
    "flex w-fit flex-row items-center gap-2 rounded-md bg-yellow px-2.5 py-1.5",
    className,
  ]}
>
  <Icon pack="ion" name="sunny-outline" size={size || 24} />
  Morgensolo
</div>
