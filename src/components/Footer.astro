---
import { Icon } from "astro-icon";
import Link from "../components/Link.astro";
import BuyTicketsButton from "./BuyTicketsButton.astro";
---

<footer class="relative mt-32">
  <div class="py-32 bg-dark-blue text-white z-10 relative">
    <div
      class="max-w-5xl mx-auto px-4 sm:px-6 md:px-8 lg:px-16 xl:px-32 grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-16"
    >
      <address class="not-italic space-y-8 row-start-2 md:row-start-1">
        <div>
          <h3 class="font-display text-lg">Booking og spørsmål</h3>
          <Link href="mailto:post@mandaljazz.no" title="post@mandaljazz.no">
            post@mandaljazz.no
          </Link>
        </div>
        <div>
          <h3 class="font-display text-lg">Eirik Kristensen (festivalsjef)</h3>
          <ul>
            <li>
              <Link href="tel:+4748225190" title="+47 482 25 190">
                +47 482 25 190
              </Link>
            </li>
            <li>
              <Link
                href="mailto:eirik@mandaljazz.no"
                title="eirik@mandaljazz.no"
              >
                eirik@mandaljazz.no
              </Link>
            </li>
          </ul>
        </div>
        <h3 class="font-display text-lg">Adresse</h3>
        Mandaljazz, Neseveien 11<br />
        4514 Mandal<br />
        Norge
      </address>

      <div class="row-start-1 space-y-8 flex flex-col md:items-end">
        <ul role="list" class="flex flex-row md:justify-end gap-4">
          <li class="inline-flex h-fit">
            <a
              href="https://www.facebook.com/mandaljazz"
              class="hover:-rotate-6 transition-transform"
              rel="noopener nofollow"
              target="_blank"
            >
              <Icon pack="ion" name="logo-facebook" size={48} /></a
            >
          </li>
          <li class="inline-flex h-fit">
            <a
              href="https://www.instagram.com/mandaljazz/"
              class="hover:-rotate-6 transition-transform"
              rel="noopener nofollow"
              target="_blank"
              ><Icon pack="ion" name="logo-instagram" size={48} /></a
            >
          </li>
        </ul>
        <BuyTicketsButton class="w-fit" />
      </div>
    </div>
  </div>
  <div
    class="absolute w-64 h-64 top-0 right-0 sm:right-1/3 md:right-1/4 -translate-y-1/3 bg-dark-blue rounded-full"
  >
  </div>
</footer>
