---
import { Icon } from "astro-icon";
import { Image } from "astro:assets";

import Link from "../components/Link.astro";
import BuyTicketsButton from "./BuyTicketsButton.astro";

import { imagePathToSrc } from "../utils/images";
---

<footer class="relative">
  <div
    class="bg-grainy relative z-10 bg-dark-blue py-32 text-white shadow-inner"
  >
    <div
      class="mx-auto max-w-5xl space-y-8 px-4 sm:px-6 md:px-8 lg:px-16 xl:px-32"
    >
      <h2 id="kontakt" class="font-display text-3xl">Kontakt</h2>
      <div class="grid grid-cols-1 gap-x-3 gap-y-16 md:grid-cols-2">
        <address class="row-start-2 space-y-8 not-italic md:row-start-1">
          <div>
            <h3 class="font-display text-lg">Booking og spørsmål</h3>
            <Link
              href="mailto:post@mandaljazz.no"
              title="post@mandaljazz.no"
              openInNewTab
            >
              post@mandaljazz.no
            </Link>
          </div>
          <div class="grid grid-cols-5 gap-12">
            <div class="col-span-3">
              <h3 class="font-display text-lg">Eirik Kristensen</h3>
              <p class="text-xs">Festivalsjef</p>
              <ul>
                <li>
                  <Link href="tel:+4748225190" title="+47 48 22 51 90">
                    +47 48 22 51 90
                  </Link>
                </li>
                <li>
                  <Link
                    href="mailto:eirik@mandaljazz.no"
                    title="eirik@mandaljazz.no"
                    openInNewTab
                  >
                    eirik@mandaljazz.no
                  </Link>
                </li>
              </ul>
            </div>
            <Image
              src={imagePathToSrc("/src/images/folk/eirik-kristensen.jpg")}
              alt={"Eirik Kristensen"}
              class="z-10 col-span-2 h-24 w-24 origin-right rounded-lg transition-transform md:hover:scale-[3]"
            />
            <div class="col-span-3">
              <h3 class="font-display text-lg">Mari Marie Øinæs Nyvoll</h3>
              <p class="text-xs">Nestleder</p>
              <ul>
                <li>
                  <Link href="tel:+4790118181" title="+47 90 11 81 81">
                    +47 90 11 81 81
                  </Link>
                </li>
                <li>
                  <Link
                    href="mailto:marimarie@mandaljazz.no"
                    title="marimarie@mandaljazz.no"
                    openInNewTab
                  >
                    marimarie@mandaljazz.no
                  </Link>
                </li>
              </ul>
            </div>
            <Image
              src={imagePathToSrc(
                "/src/images/folk/mari-marie-oinaes-nyvoll.jpg",
              )}
              alt={"Mari Marie Øinæs Nyvoll"}
              class="z-10 col-span-2 h-24 w-24 origin-right rounded-lg transition-transform md:hover:scale-[3]"
            />
          </div>
        </address>

        <div class="row-start-1 flex flex-col space-y-8 md:items-end">
          <ul role="list" class="flex flex-row gap-4 md:justify-end">
            <li class="inline-flex h-fit">
              <a
                href="https://www.facebook.com/mandaljazz"
                class="transition-transform duration-500 hover:-rotate-[366deg]"
                rel="noopener nofollow"
                target="_blank"
              >
                <Icon pack="ion" name="logo-facebook" size={48} /></a
              >
            </li>
            <li class="inline-flex h-fit">
              <a
                href="https://www.instagram.com/mandaljazz/"
                class="transition-transform duration-500 hover:-rotate-[366deg]"
                rel="noopener nofollow"
                target="_blank"
                ><Icon pack="ion" name="logo-instagram" size={48} /></a
              >
            </li>
          </ul>
          <BuyTicketsButton class="w-fit" />
          <address class="space-y-8 not-italic md:text-right">
            <h3 class="font-display text-lg">Adresse</h3>
            mandaljazz, Neseveien 11<br />
            4514 Mandal<br />
            Norge
          </address>
        </div>
      </div>
    </div>
  </div>
</footer>
