---
import { Icon } from "astro-icon";
import Link from "../components/Link.astro";
---

<footer class="relative mt-32">
  <div class="py-32 bg-dark-blue text-white z-10 relative">
    <div class="px-4 sm:px-24 md:px-48 lg:px-64 space-y-4">
      <Link href="mailto:post@mandaljazz.no" title="post@mandaljazz.no">
        post@mandaljazz.no
      </Link>
      <ul role="list" class="flex flex-row gap-4">
        <li class="inline-flex">
          <a
            href="https://www.facebook.com/mandaljazz"
            class="hover:scale-105 transition-transform"
          >
            <Icon pack="ion" name="logo-facebook" size={48} /></a
          >
        </li>
        <li class="inline-flex">
          <a
            href="https://www.instagram.com/mandaljazz/"
            class="hover:scale-105 transition-transform"
            ><Icon pack="ion" name="logo-instagram" size={48} /></a
          >
        </li>
      </ul>
    </div>
  </div>
  <div
    class="absolute w-64 h-64 top-0 right-0 sm:right-1/3 md:right-1/4 -translate-y-1/3 bg-dark-blue rounded-full"
  >
  </div>
</footer>
