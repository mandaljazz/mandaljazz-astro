---
const {
  frontmatter: { title, id, start, end },
} = Astro.props;
---

<section class="space-y-8">
  <div id={id} class="invisible -translate-y-16"></div>
  <h3
    class="sticky top-[100px] md:top-[56px] p-3 md:p-4 bg-blue bg-grainy font-display text-xl md:text-2xl inline-block rounded-xl rounded-tl-none"
  >
    {title}
  </h3>
  <article class="prose">
    <slot />
  </article>
</section>
