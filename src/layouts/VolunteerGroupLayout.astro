---
import { Image } from "astro:assets";
import { imagePathToSrc } from "../utils/images";

const {
  frontmatter: { title, id, start, end, imagePath, imageAlt },
} = Astro.props;
---

<section class="space-y-8">
  <div id={id} class="invisible -translate-y-16"></div>
  <h3
    class="sticky top-[100px] inline-block w-full rounded-xl rounded-tl-none bg-blue p-3 font-display text-xl md:top-[56px] md:p-4 md:text-2xl"
  >
    {title}
  </h3>
  <article class="prose">
    <slot />
  </article>
  {
    imagePath && imageAlt && (
      <Image
        src={imagePathToSrc(imagePath)}
        class="w-full max-w-xl rounded-lg shadow-lg"
        alt={imageAlt}
      />
    )
  }
</section>
