---
import Footer from "../components/Footer.astro";
import "../styles/fonts.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="no">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-stone-100 text-black flex flex-col gap-24">
    <nav class="flex flex-row gap-2 sm:gap-6 p-4 justify-center sticky top-0 bg-pink text-white">
      <a href="/">Artister</a>
      <!-- <a href="/program">Program</a> -->
      <a href="/praktisk">Praktisk</a>
      <a href="/billetter">Billetter</a>
      <a href="/frivillig">Frivillig</a>
      <!-- <a href="/historikk">Historikk</a> -->
      <!-- <a href="/blogg">Blogg</a> -->
    </nav>
    <slot />
    <Footer />
  </body>
</html>
