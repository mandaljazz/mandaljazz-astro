---
import { getCollection, getEntry, type CollectionEntry } from "astro:content";
import BlogLayout from "../../layouts/BlogLayout.astro";

type Props = {
  post: CollectionEntry<"blogg">;
};

export async function getStaticPaths() {
  const blogPosts = await getCollection("blogg", ({ data }) => {
    return !data.hide;
  });

  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props as Props;
const { Content } = await post.render();
const author = await getEntry("authors", post.data.author);
---

<BlogLayout
  frontmatter={{
    title: post.data.title,
    author: author.data.name,
    authorImage: author.data.image,
    ingress: post.data.ingress,
    image: post.data.image,
    createdAt: post.data.createdAt.toISOString(),
    updatedAt: post.data.updatedAt?.toISOString(),
  }}
>
  <Content />
</BlogLayout>
