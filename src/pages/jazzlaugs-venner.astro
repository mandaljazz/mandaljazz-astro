---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import { imagePathToSrc } from "../utils/images";
---

<Layout
  title="Jazzlaugs Venner // Mandaljazz 2026"
  description="Venner av Mandaljazz som støtter festivalen"
>
  <main class="px-4 py-20 sm:px-12 sm:py-24 md:px-24 lg:px-32">
    <div class="mx-auto max-w-5xl">
      <Image
        src={imagePathToSrc("/src/images/sponsors/jazzlaugs-venner.png")}
        alt="Jazzlaugs Venner"
        class="mx-auto my-8 w-96 max-w-full"
        loading="eager"
      />
      <ul role="list" class="mx-auto w-fit list-disc text-xl leading-10">
        <li>Aurebekk Gartneri</li>
        <li>Buen kulturhus</li>
        <li>NorEngros</li>
        <li>Nødings Delikatesse</li>
        <li>Maren AS</li>
        <li>Mandal Hotel</li>
      </ul>
    </div>
  </main>
</Layout>
