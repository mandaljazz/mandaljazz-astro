---
import Link from "../components/Link.astro";
import BuyTicketsButton from "../components/BuyTicketsButton.astro";
import Lottie from "../components/Lottie.astro";
import Title from "../components/Title.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/tikkio-overrides.css";
---

<Layout
  title="Billetter // mandaljazz 2024"
  description="Kjøp billetter til mandaljazz 2024"
>
  <main class="px-4 sm:px-6 md:px-8 lg:px-16 xl:px-32 py-24 sm:py-40">
    <div class="max-w-5xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-5 gap-4 items-end">
        <div class="md:col-span-3 space-y-8">
          <h1 class="font-display text-5xl md:text-7xl">Billetter</h1>

          <article class="prose">
            <p>
              mandaljazz tilbyr enkeltbilletter, dagspass og festivalpass til
              publikum.
            </p>

            <Title title="Festivalpass og dagspass" type="dark-blue" />
            <p>Gir inngang til alle konserter.</p>

            <Title title="Enkeltbilletter" type="blue" flip />

            <p>Gir inngang til den aktuelle konserten.</p>

            <Title title="Studenter og ungdom under 26 år" type="dark-blue" />
            <p>
              mandaljazz tilbyr rabatterte billetter til studenter og ungdom
              under 26 år. Studenter inkluderer også elever på videregående,
              ungdoms- og barneskoler.
            </p>

            <Title title="Barnekonsert" type="blue" flip />
            <p>
              Barnekonserten er gratis for alle, både barn og voksne! Men husk å
              reservere en gratisbillett.
            </p>

            <Title
              title="Funksjonshemmede med ledsagerbevis"
              type="dark-blue"
            />
            <p>
              Innehavere av ledsagerbevis for funksjonshemmede gis gratis
              billett til sin ledsager.
            </p>
          </article>
        </div>
        <div
          class="sticky bottom-4 md:bottom-8 h-fit md:col-span-2 space-y-2 flex flex-col items-end"
        >
          <img
            src="/profil/frimerke-sykkeltur.png"
            class="w-48 hidden md:block"
          />
          <BuyTicketsButton class="w-fit mx-auto md:w-48 md:mx-0" />
        </div>
        <img
          src="/profil/frimerke-sykkeltur.png"
          class="w-full max-w-sm block md:hidden mx-auto"
        />
      </div>
    </div>
  </main>
</Layout>
