---
import { getCollection } from "astro:content";
import partition from "lodash/partition";

import classNames from "classnames";
import ArtistCard from "../components/ArtistCard.astro";
import BuyTicketsButton from "../components/BuyTicketsButton.astro";
// import Spotify from "../components/Spotify.astro";
import Layout from "../layouts/Layout.astro";
import { getArtistUrl } from "../utils/artist";

const artistEntries = await getCollection("artist");
const artistList = artistEntries.map((entry) => ({
  slug: entry.slug,
  frontmatter: entry.data,
}));

// Filter to only show current year artists (2026)
const currentYear = "2026";
const currentYearArtists = artistList.filter((artist) => {
  // Check if slug starts with current year (e.g., "2026/pumpegris")
  return (
    artist.slug.startsWith(`${currentYear}/`) || artist.slug === currentYear
  );
});

const [upcomingArtists, pastArtists] = partition(
  currentYearArtists,
  (artist) => {
    const {
      frontmatter: { concertStartAt },
    } = artist;

    return concertStartAt && new Date(concertStartAt) > new Date();
  },
);

const byOrder = (a, b) => {
  const aOrder = Number(a.frontmatter.order) || Number.NEGATIVE_INFINITY;
  const bOrder = Number(b.frontmatter.order) || Number.NEGATIVE_INFINITY;
  return bOrder - aOrder;
};
---

<Layout title="Mandaljazz 2026" description="Jazzfestivalen i Mandal">
  <main
    class="space-y-24 px-4 py-24 sm:px-6 sm:py-40 md:px-8 lg:px-16 xl:px-32"
  >
    <div
      class="relative flex h-[60vh] max-h-[560px] min-h-[420px] w-full flex-col gap-8 overflow-hidden rounded-lg sm:gap-12"
    >
      <div class="absolute inset-0">
        <video
          autoplay
          playsinline
          muted
          class="h-full w-full object-cover"
          loop
        >
          <source
            src="/video/oppsummeringsfilm-2023-compressed.mp4"
            type="video/mp4"
          />
          Beklager, her skulle det egentlig vært en video, men nettleseren din støtter
          ikke innebygde videoer :(
        </video>
        <div class="absolute inset-0 bg-black/10"></div>
      </div>
      <div class="relative z-10 flex min-h-full w-full flex-col gap-8">
        <div class="mx-auto flex w-full max-w-5xl flex-col items-center gap-8">
          <div
            class="relative flex w-full flex-col items-center gap-4 pt-16 md:pt-32 lg:mx-auto lg:w-fit"
          >
            <div class="flex flex-col">
              <div class="relative flex w-full">
                <h1
                  class="z-10 flex flex-col items-end font-league-spartan leading-snug text-black"
                >
                  <span
                    class="block rounded-xl rounded-br-none bg-pink p-6 text-center text-4xl sm:text-7xl"
                    >9.–11. juli</span
                  >
                  <span class="flex w-full flex-row">
                    <span class="block flex-1"></span>
                    <span
                      class="block w-fit rounded-b-xl bg-pink/70 p-2 text-4xl italic"
                      >2026</span
                    >
                  </span>
                </h1>
                <!-- New date badge -->
                <div
                  class="absolute -right-10 -top-6 z-10 sm:-right-10 sm:-top-8"
                >
                  <div
                    class="delay-2500 rotate-12 transform rounded-full bg-red px-5 py-3 text-white"
                  >
                    <span class="font-semibold">NY DATO</span>
                  </div>
                </div>
              </div>
              <!-- <BuyTicketsButton class="mx-auto mt-8 w-fit" /> -->
            </div>
          </div>
        </div>
        <div
          class="mx-auto flex max-w-5xl flex-col items-center gap-8 sm:gap-16"
        >
          <BuyTicketsButton />
        </div>
      </div>
    </div>
    <div class="mx-auto max-w-5xl space-y-4 sm:space-y-8">
      <h2 class="text-4xl sm:text-6xl">Artister</h2>
      <ul
        role="list"
        class="grid grid-cols-1 gap-x-8 gap-y-12 sm:grid-cols-2 lg:grid-cols-3"
      >
        {
          [...upcomingArtists.sort(byOrder), ...pastArtists.sort(byOrder)].map(
            (artist, index) => {
              const {
                slug,
                frontmatter: {
                  title,
                  shortTitle,
                  hideFromArtistList,
                  tagline,
                  isMorgensolo,
                  isBestillingsverk,
                  isBarnekonsert,
                  image,
                  cancelled,
                },
              } = artist;

              if (hideFromArtistList) {
                return null;
              }

              return (
                <ArtistCard
                  className={classNames({
                    "lg:col-span-2 lg:row-span-2 lg:h-[628px]":
                      index === 0 || index === 9,
                    "lg:col-span-2 lg:col-start-2 lg:row-span-2 lg:h-[628px]":
                      index === 4 || index === 16,
                  })}
                  href={getArtistUrl(slug)}
                  title={shortTitle || title}
                  tagline={tagline}
                  slug={slug}
                  image={image}
                  isMorgensolo={isMorgensolo}
                  isBestillingsverk={isBestillingsverk}
                  isBarnekonsert={isBarnekonsert}
                  cancelled={cancelled}
                />
              );
            },
          )
        }
      </ul>
    </div>
    <!-- <Spotify src="https://open.spotify.com/playlist/0EIBP4fq87VohyCpG5TPsZ" /> -->
    <BuyTicketsButton class="mx-auto w-fit" />
  </main>
</Layout>
